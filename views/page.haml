.page_content
	- if @editing
		%form{ :action => "", :method => "post"}
			%input{:type => "text", :name => "title", :value => "#{@page.title}", :class => "text_field", :style => "width:429px;"}
			%br
			%textarea{:name => "body", :style => "width:429px; height:465px;"}= @page.body
	- else
		- if @page.id
			%h2= @page.title
			%p= @page.formatted_body
		- else
			%h2= "No page found"

.pen
	- if @can_edit
		%a{:href => "#{@edit_link}"}
			%img{:src => "/images/fountainpen.gif", :border => 0}